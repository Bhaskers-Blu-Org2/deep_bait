FROM microsoft/cntk:2.1-gpu-python3.5-cuda8.0-cudnn6.0

COPY ssh_config /root/.ssh/config
RUN apt-get update && apt-get install -y --no-install-recommends \
        openssh-client \
        openssh-server \
        iproute2 \
        git \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/* \
    # configure ssh server and keys
    && mkdir /var/run/sshd \
    && ssh-keygen -A \
    && sed -i 's/PermitRootLogin without-password/PermitRootLogin yes/' /etc/ssh/sshd_config \
    && sed 's@session\s*required\s*pam_loginuid.so@session optional pam_loginuid.so@g' -i /etc/pam.d/sshd \
    && ssh-keygen -f /root/.ssh/id_rsa -t rsa -N '' \
    && chmod 600 /root/.ssh/config \
    && chmod 700 /root/.ssh \
    && cp /root/.ssh/id_rsa.pub /root/.ssh/authorized_keys


RUN git clone https://github.com/msalvaris/gpu_monitor.git

RUN bash -c "source /cntk/activate-cntk && \
			 pip install fire toolz==0.8.2 scikit-learn bokeh==0.12.6 pandas==0.19.1 pypandoc==1.4 influxdb==5.0.0 &&\
			 pip install --upgrade requests"


RUN bash -c "source /cntk/activate-cntk && \
			 pip install -r gpu_monitor/requirements.txt && \
			 pip install --no-deps -e gpu_monitor"

EXPOSE 23
CMD ["/usr/sbin/sshd", "-D", "-p", "23"]

